---
import SocialPill from './Pill.astro'
import ArrowRightIcon from '@/assets/Arrow.astro'

const { title, description, date, link } = Astro.props;
---

<li class="mb-10 ms-9">
  <span
    class="absolute flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full -start-3 ring-8 ring-white dark:ring-gray-900 dark:bg-blue-900"
  >
    <svg
      class="size-3 text-blue-800 dark:text-blue-300"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      fill="currentColor"
      viewBox="0 0 20 20"
    >
      <path
        d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
      ></path>
    </svg>
  </span>

  <div class="grid grid-cols-1 md:grid-cols-[auto_1fr] gap-3 md:gap-10 items-start">
    <div class="flex flex-col">
      <time class="text-sm font-normal leading-none text-sky-200/80 mb-2">{date}</time>
      <h3 class="text-xl font-semibold text-yellow-200/90 mb-0 md:mb-4">
        {title}
      </h3>
      {
        link && (
          <SocialPill href={link} class="mb-4 hidden md:flex">
            M치s Informaci칩n
            <ArrowRightIcon class="size-4 md:size-5" />
          </SocialPill>
        )
      }
    </div>

    <div class="flex flex-col gap-4">
      <p class="text-base font-normal text-gray-500 dark:text-gray-400 text-pretty">
        {description}
      </p>
      {
        link && (
          <SocialPill href={link} class="mb-4 md:hidden">
            M치s Informaci칩n
            <ArrowRightIcon class="size-4 md:size-5" />
          </SocialPill>
        )
      }
    </div>
  </div>
</li>
